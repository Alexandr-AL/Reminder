<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reminder.MainPage"
             xmlns:vm="clr-namespace:Reminder.ViewModels"
             xmlns:model="clr-namespace:Reminder.Models"
             x:DataType="vm:MainPageViewModel"
             Title="{Binding Title}">
    
    <Shell.TitleView>


        
        
        <Grid>
            <Button HorizontalOptions="End" 
                    Margin="0, 0, 5, 0" 
                    
                                       
                    ImageSource="search01.svg"
                    FontFamily="Calibri"
                    
                    FontSize="20"
                    
                    TextColor="White"
                    
                    Command="{Binding AddNewEventCommand}"/>
 <!--           
            <ImageButton  
                    Margin="0" 
                    Padding="0"
                    HorizontalOptions="Start"            
                    Source="three03.svg"
                    
                    
                
                    Command="{Binding AddNewEventCommand}"/>
-->
            
            <Label VerticalOptions="Center"
                   FontFamily="Calibri" 
                   Text="Напоминалка"  
                   FontSize="20" 
                   TextColor="White"
                   
                   Margin="30, 0, 0, 0"/>
        </Grid>
    </Shell.TitleView>
    
    <Grid ColumnDefinitions="*" RowDefinitions="*">
        <ScrollView Grid.Column="0" Grid.Row="0">
            <VerticalStackLayout VerticalOptions="Start" 
                                 HorizontalOptions="Center"
                                 Margin="10"
                                 
                                 >
                <CollectionView ItemsSource="{Binding Events}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:Event">
                            <Frame BorderColor="#141414"
                                   Margin="5,0,5,10" 
                                   CornerRadius="0"
                                   
                                   HasShadow="True"
                                   >
                                <Frame.GestureRecognizers>
                                    <ClickGestureRecognizer
                                        
                                        Command="{Binding }"/>
                                    <TapGestureRecognizer/>
                                </Frame.GestureRecognizers>

                                <VerticalStackLayout Padding="10,0,0,0" HeightRequest="70" >

                                    <Label Text="{Binding Name}" FontFamily="Calibri" FontSize="22" />

                                    <Label Text="{Binding DateTimeEvent, StringFormat='{0:dd/MM/yyyy HH:mm}'}"/>

                                    <Label Text="{Binding Description}"/>

                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
        <Button  ImageSource="plus1122.png" 
                     Grid.Column="0"
                     Grid.Row="0"
                     HorizontalOptions="End" 
                     VerticalOptions="End"
                   
                        
                     Margin="0,0,0,0"
                     
                     
                     
                     Command="{Binding AddNewEventCommand}"/>
    </Grid>


    <!--                
                     MaximumHeightRequest="16"
                     MaximumWidthRequest="16"
-->

    

</ContentPage>