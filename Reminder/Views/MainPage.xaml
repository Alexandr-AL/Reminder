<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reminder.MainPage"
             xmlns:vm="clr-namespace:Reminder.ViewModels"
             xmlns:model="clr-namespace:Reminder.DAL.Entities;assembly=Reminder.DAL"
             x:DataType="vm:MainPageViewModel">

    <Shell.TitleView>

        <Grid>

            <Label VerticalOptions="Center"
                   FontFamily="Calibri"
                   Text="Reminder"
                   FontSize="20" 
                   TextColor="White"
                   HorizontalOptions="Start"
                   Margin="5,0,0,0"/>

            <ImageButton Source="search03.png" 
                         BackgroundColor="#141414"  
                         WidthRequest="18" 
                         HeightRequest="18" 
                         Margin="0,0,20,0" 
                         HorizontalOptions="End"   
                         Clicked="Button_Clicked"/>     
            <!--
                <SearchBar BackgroundColor="WhiteSmoke"
                               
                               WidthRequest="200"
                               MaximumWidthRequest="200"
                               VerticalOptions="Center"
                               HorizontalOptions="End"
                               
                               x:Name="searchBar"
                               Text="{Binding TextSearch}"/>

           -->
        </Grid>
    </Shell.TitleView> 
   
    <Grid ColumnDefinitions="*" RowDefinitions="*">

        <ScrollView Grid.Column="0" Grid.Row="0">

            <VerticalStackLayout VerticalOptions="Start" 
                                 HorizontalOptions="Start"
                                 Margin="0,0,0,0"
                                 Padding="0,0,0,0">

                <CollectionView ItemsSource="{Binding Events}">

                    <CollectionView.ItemTemplate>

                        <DataTemplate x:DataType="model:Event">
                            
                            <SwipeView>
                                
                                <SwipeView.LeftItems>
                                    <SwipeItems>
                                        <SwipeItem IconImageSource="trash_can2.png"
                                                   Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageViewModel}}, Path=DeleteEventCommand}"
                                                   CommandParameter="{Binding .}"/>
                                    </SwipeItems>
                                </SwipeView.LeftItems>

                                <Grid>

                                    <Frame BorderColor="#909090"
                                           Margin="13,10,13,0" 
                                           CornerRadius="5"
                                           HasShadow="True">

                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageViewModel}}, Path=EditEventCommand}"
                                                                  CommandParameter="{Binding .}"
                                                                  NumberOfTapsRequired="1"/>
                                        </Frame.GestureRecognizers>
                                    
                                        <VerticalStackLayout Margin="0,0,0,0">

                                            <Label Text="{Binding Name}" 
                                                   FontFamily="Calibri" 
                                                   FontSize="24" />

                                            <Label Text="{Binding DateTimeEvent, StringFormat='{0:dd/MM/yyyy HH:mm}'}"  
                                                   FontFamily="Calibri"/>

                                            <Label Text="{Binding Description}"  
                                                   FontFamily="Calibri"/>

                                        </VerticalStackLayout>
                                    </Frame>
                                </Grid>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
        
        <Button ImageSource="plus1122.png" 
                Grid.Column="0"
                Grid.Row="0"
                BorderColor="Transparent"
                HorizontalOptions="End" 
                VerticalOptions="End"
                BackgroundColor="Transparent"
                MaximumHeightRequest="64"
                MinimumWidthRequest="64"
                Margin="0,0,5,5"
                Command="{Binding AddNewEventCommand}"/>
    </Grid>
</ContentPage>
   