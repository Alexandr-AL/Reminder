             xmlns:model="clr-namespace:Reminder.DAL.Entities;assembly=Reminder.DAL"
             xmlns:vm="clr-namespace:Reminder.ViewModels"
             Title="Reminder"
             x:DataType="vm:MainPageViewModel">


