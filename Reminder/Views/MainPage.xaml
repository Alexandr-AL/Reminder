<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reminder.MainPage"
             xmlns:vm="clr-namespace:Reminder.ViewModels"
             xmlns:model="clr-namespace:Reminder.Models"
             x:DataType="vm:MainPageViewModel"
             Title="{Binding Title}">
    
    <Shell.TitleView>
        <Grid>
            <Button HorizontalOptions="End" 
                    Margin="0, 0, 10, 0" 
                    BackgroundColor="Transparent" 
                    ImageSource="plus.svg"
                    Command="{Binding AddNewEventCommand}"/>

            <Label VerticalOptions="Center"
                   FontFamily="Calibri" 
                   Text="Напоминалка"  
                   FontSize="20" 
                   TextColor="White" 
                   Margin="0, 0, 0, 0"/>
        </Grid>
    </Shell.TitleView>
    
    <Grid ColumnDefinitions="*" RowDefinitions="*">
        <ScrollView Grid.Column="0" Grid.Row="0">
            <VerticalStackLayout VerticalOptions="Start" 
                                 HorizontalOptions="Center"
                                 Margin="10">
                <CollectionView ItemsSource="{Binding Events}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:Event">
                            <Frame BorderColor="Black"
                                   Margin="0,0,0,10" 
                                   CornerRadius="5">
                                <Frame.GestureRecognizers>
                                    <ClickGestureRecognizer
                                        Command="{Binding }"/>
                                    <TapGestureRecognizer/>
                                </Frame.GestureRecognizers>
                                
                                <VerticalStackLayout Padding="10,0,0,0">

                                    <Label Text="{Binding Name}" FontFamily="Calibri" FontSize="22"/>

                                    <Label Text="{Binding DateTimeEvent, StringFormat='{0:dd/MM/yyyy HH:mm}'}"/>

                                    <Label Text="{Binding Description}"/>

                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
        <ImageButton Source="plus01.png" 
                     Grid.Column="0"
                     Grid.Row="0"
                     HorizontalOptions="End" 
                     VerticalOptions="End"
                     MaximumHeightRequest="64"
                     MaximumWidthRequest="64"
                     Aspect="Fill"
                     Margin="0,0,30,30"
                     Opacity="0.6"
                     Command="{Binding AddNewEventCommand}"/>
    </Grid>
</ContentPage>